<section class="row pb-2">
    <header class="col-md-8">
        <h1>Artwork Gallery</h1>
        <p>Add your child's artwork to look back on them fondly in the future.</p>
    </header>
    <aside class="col-md-4 align-self-md-center text-md-end">
        <p>
            <a href="/" class="btn btn-primary">Add New</a>
        </p>
    </aside>
</section>

<section class="row">
    {{#each artworks}}
    <article class="col-md-6 mb-3">
        <div class="card">
            <img src="/images/artworks/{{this.image}}" class="card-img-top" alt="{{this.child}}'s artwork">
            <div class="card-body">
                <p class="card-text">{{this.caption}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="mb-0"><small>by {{this.child}} on {{this.updatedDate}}</small></p>
                </div>
            </div>
        </div>
    </article>
    {{/each}}
</section>