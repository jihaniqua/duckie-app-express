<section class="row create-field">
    <h1 class="mb-4">{{title}}</h1>
    <form method="post">
        {{!-- date --}}
        <fieldset class="mb-4">
            <label for="date" class="form-label"><small>Date of health event: *</small></label>
            <input name="date" id="date" class="form-control" type="date" required />
        </fieldset>
        {{!-- child name --}}
        <fieldset class="mb-4">
            <label for="child" class="form-label"><small>Name of child: *</small></label>
            <input name="child" id="child" class="form-control" placeholder="Name of child" required />
        </fieldset>
        {{!-- health event --}}
        <fieldset class="mb-4">
            <label for="event" class="form-label"><small>Health event: *</small></label>
            <input name="event" id="event" class="form-control" placeholder="Health event" aria-describedby="help" required/>
            <div id="help" class="form-text">E.g. Allergy, General Health, Health Maintenance, Vaccination, Medication, Surgery, etc.</div>
        </fieldset>
        {{!-- notes --}}
        <fieldset class="mb-4">
            <label for="notes" class="form-label"><small>Detailed Notes:</small></label>
            <textarea name="notes" id="notes" class="form-control" rows="4" placeholder="Type your notes here..."></textarea>
        </fieldset>
        {{!-- user --}}
        <fieldset class="mb-4">
            <label for="username" class="form-label"><small>Username: *</small></label>
            <input name="username" id="username" class="form-control" placeholder="Temporary" required />
            {{!-- <input name="username" id="username" type="hidden" value="{{user.username}}" />
            <input name="usernameDisplay" id="usernameDisplay" class="form-control" required disabled value="{{user.username}}" /> --}}
        </fieldset>
        <div class="d-grid">
            <button class="btn btn-primary mb-4">Save</button>
        </div>
    </form>
</section>