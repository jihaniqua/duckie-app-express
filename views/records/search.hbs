<section class="row pb-4">
    <a href="/records" class="btn btn-link ps-0 mb-4 text-start">
        <i class="bi bi-chevron-left pe-2"></i>Back to List
    </a>
    <h1>Search Results for: {{keyword}}</h1>
</section>

<section class="row">
    {{#each records}}
    <article class="col-lg-4 mb-3">
        <div class="card">
            <header class="card-header p-3">
                <h5 class="mb-0">{{this.event}}</h5>
            </header>
            <div class="card-body">
                <div class="row">
                    <div class="col col-lg-6 col-md-4">
                        <p class="mb-0"><small>Date</small></p>
                        <p>{{this.updatedDate}}</p>
                    </div>
                    <div class="col col-lg-6 col-md-4">
                        <p class="mb-0"><small>Child</small></p>
                        <p>{{this.child}}</p>
                    </div>
                </div>
                <p class="card-text">{{this.notes}}</p>
                <a href="/records/details/{{this.id}}" class="btn btn-outline-primary btn-sm mb-1">View</a>
            </div>
        </div>
    </article>
    {{/each}}
</section>